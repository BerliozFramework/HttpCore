{% extends "@Berlioz-HttpCore/Twig/Debug/_main.html.twig" %}

{% block main %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1>
            Exception
            {% if snapshot.exceptions|length > 0 %}
                <span class="badge bg-danger">{{ snapshot.exceptions|length }}</span>
            {% endif %}
        </h1>
    </div>

    <p>
        It's a snapshot of exception thrown at the moment of request.
    </p>

    {% if snapshot.exceptions is empty %}
        <div class="alert alert-success" role="alert">
            <strong>Great!</strong> No exception thrown
        </div>
    {% else %}
        {% for exception in snapshot.exceptions %}
            <pre>
                <code class="plaintext">{{ exception }}</code>
            </pre>
        {% endfor %}
    {% endif %}
{% endblock %}