{% extends "@Berlioz-HttpCore/Twig/Debug/_main.html.twig" %}

{% block main %}
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1>PHP errors ({{ phpErrors|length }})</h1>
  </div>

  <p>
    It's a snapshot of PHP errors occurred at the moment of request.
  </p>

  <div class="table-responsive">
    <table class="table table-striped table-sm">
      <thead>
      <tr>
        <th>Type</th>
        <th>Message</th>
        <th>File</th>
      </tr>
      </thead>
      <tbody>
      {% for error in phpErrors %}
        <tr>
          <td>{{ class.name }}</td>
          {% if class.type == 'berlioz' %}
            <td>Berlioz Framework</td>
          {% else %}
            <th>User defined</th>
          {% endif %}
        </tr>
      {% else %}
        <tr>
          <td colspan="3" class="text-center"><em>No PHP error reported</em></td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}